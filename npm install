const { chromium, firefox } = require('playwright');

(async () => {
  // Gebruik Firefox voor een andere TLS signature dan de standaard Chrome bots
  const browser = await firefox.launch({ 
      headless: true // Zet op false om live mee te kijken
  });
  
  const context = await browser.newContext({
    userAgent: 'Mozilla/5.0 (Windows NT 10.0; Win64; x64; rv:109.0) Gecko/20100101 Firefox/115.0',
    viewport: { width: 1920, height: 1080 }
  });

  const page = await context.newPage();

  try {
    console.log('Verbinding maken met doelwit...');
    // Vervang dit door de URL van Barendrecht/Overheid.nl
    await page.goto('https://www.gemeentebarendrecht.nl', { 
        waitUntil: 'networkidle' // Wacht tot alle netwerkverzoeken klaar zijn
    });

    // Wacht expliciet op een element dat bewijst dat de content geladen is
    // Bijv. zoekresultaten of een header
    // await page.waitForSelector('.search-results'); 

    // Haal de HTML op na JavaScript executie
    const content = await page.content();
    
    // Of pak specifieke tekst
    const pageText = await page.innerText('body');
    
    console.log('Pagina titel:', await page.title());
    
    // Simpele check of onze zoektermen voorkomen
    if (pageText.toLowerCase().includes('deurloo') || pageText.toLowerCase().includes('ontslag')) {
        console.log('!!! MOGELIJKE HIT GEVONDEN !!!');
    } else {
        console.log('Nog geen directe hit op deze pagina.');
    }

  } catch (error) {
    console.error('Fout tijdens scrapen:', error);
  } finally {
    await browser.close();
  }
})();
